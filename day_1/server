const http = require('http');

let request_counter = 0;

const server = http.createServer((request, response) => {
  response.writeHead(200, {
    'Content-type': 'text/html',
    'Alumnos-HACKABOS': 'xente guai'
  });

  if (request.url === '/berto') {
    request_counter = request_counter + 1;

    response.end(`
      <html>
        <head>
          <meta charset="utf-8">
          <title>PÃ¡xina de berto</title>
        </head>
        <body>
          <h1>Hola berto! ğŸ˜</h1>
          <a href="/">volver Ã¡ portada</a><br>
          <img src="https://pbs.twimg.com/profile_images/773510116364656640/Epf7sJlL_400x400.jpg">
          <p>Esta Ã© a peticiÃ³n nÃºmero: ${request_counter}</p>
        </body>
      </html>
    `);
  } else {
    response.end('esta Ã© a portada!');
  }
});

server.listen(8000);
